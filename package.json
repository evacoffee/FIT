{
  "name": "closetly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate:images": "node scripts/generate-asset-images-simple.js",
    "generate:assets": "npm run generate:images && node scripts/generate-assets.js",
    "build:mobile": "next build && next export -o build && npm run generate:assets",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "setup:mobile": "npm install -g cordova-res && npm install @capacitor/splash-screen @capacitor/ios @capacitor/android",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "prepare": "husky install",
    "postbuild": "next-sitemap",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/splash-screen": "^7.0.1",
    "class-variance-authority": "^0.7.0",
    "cordova-res": "^0.15.4",
    "date-fns": "^3.3.1",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.303.0",
    "mongodb": "^5.7.0",
    "mongoose": "^8.15.1",
    "next": "14.1.0",
    "next-auth": "^4.24.5",
    "next-pwa": "^5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^6.0.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.70",
    "@next/bundle-analyzer": "^15.3.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "20.11.16",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "autoprefixer": "^10.4.16",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.4.0",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
